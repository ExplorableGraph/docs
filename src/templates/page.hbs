areas = (js%markCurrent)(this, currentArea):
  - href: /
    text: Home
  - href: /interface
    text: Concept
  - href: /core
    text: Core library
  - href: /cli
    text: CLI
  - href: /framework
    text: Framework
  - href: /language
    text: Language
  # - href: blog
